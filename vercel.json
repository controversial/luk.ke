{
  "env": {
    "GITHUB_TOKEN": "@portfolio_github_token",
    "SENDGRID_API_KEY": "@portfolio_sendgrid_api_key"
  },
  "redirects": [
    { "source": "/wikipedia/:path*", "destination": "https://wikipedia.luk.ke/:path" }
  ],
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/favicon-(.*).png",
      "headers": [
        { "key": "Cross-Origin-Resource-Policy", "value": "same-site" },
        { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" }
      ]
    }
  ]
}
